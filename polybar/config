include-file = ~/.config/polybar/modules.ini
include-file = ~/.config/polybar/colors.ini

[bar/common]
    monitor = ${env:MONITOR:}
    width = 100%
    height = 27
    border-size = 0
    fixed-center = true
    background = ${colors.bg}
    foreground = ${colors.fg}
    padding-left = 7
    padding-right = 20
    module-margin-left = 2
    module-margin-right = 2
    font-0 = Montserrat:weight=SemiBold:size=10;2
    font-1 = Hack Nerd Font:size=12;2
    font-2 = Montserrat:weight=Medium:size=10;2
    font-3 = FontAwesome5Free:style=Solid:size=10;4
    font-4 = FontAwesome5Free:style=Regular:size=10;4
    font-5 = FontAwesome5Brands:style=Regular:size=10;4
    cursor-click = pointer
    cursor-scroll = ns-resize

[bar/mainbar]
    inherit = bar/common
    ;;;;;;; Module positioning
    modules-left = term hostname xwindow
    modules-center = workspaces
    ;modules-right = filesystem xbacklight alsa pulseaudio xkeyboard memory cpu wlan battery temperature date powermenu
    modules-right = date
    ;;;;;;; Systemtray
    tray-position = ${env:TRAY_POSITION:right}
    tray-padding = 2
    tray-scale = 1.0
    tray-maximize = 30

[bar/sidebar]
    inherit = bar/common
    ;;;;;;; Module positioning
    modules-left = term hostname xwindow
    modules-center = workspaces
    modules-right = date



[settings]
    screenchange-reload = true
    ;compositing-background = xor
    ;compositing-background = screen
    ;compositing-foreground = source
    ;compositing-border = over
    ;pseudo-transparency = false

[global/wm]
    margin-top = 5
    margin-bottom = 5

